<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>

    <div class="col-md-8">
      <h3><%= t("micropost.feed") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>

  <div class="center jumbotron">
    <h1> <%= t "page.home.welcome" %> </h1>

    <h2>
      <%= t "page.home.content" %>
    </h2>

    <%= link_to t("link.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("ror.png", alt: "Rails logo", id: "ror-logo"),
    "http://rubyonrails.org/", id: "image-link"%>

<% end %>

<p><%= I18n.locale %></p>
