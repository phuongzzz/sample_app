<% provide :title, t("password_reset.title") %>
<h1><%= t "password_reset.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag password_resets_path, method: :post do %>
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email], class: "form-control" %>
      <br>
      <%= submit_tag t("password_reset.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
